@page "{count?}"
@using RejectionApp.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="d-flex justify-content-center" xmlns="http://www.w3.org/1999/html">
    <div class="my-auto" style="font-size: larger">
        <h1 class="display-4 text-center">Welcome</h1>
        @Html.Hidden("guid", Model)
        @Html.Hidden("add", Model.FuncCount + 1)
        @Html.Hidden("remove", Model.FuncCount - 1)
        <form method="post" class="mt-3">
            <div class="form-group row fw-bold justify-content-md-center">
                <div class="col">
                    @for (var i = 0; i < Model.FuncCount; i++)
                    {
                        Model.MyResult.Functions.Add(new Function());
                        <div class="row">
                            <div class="col">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">f</span>
                                    <input type="text" asp-for="MyResult.Functions[i].Value" class="form-control" id="functionText" placeholder="Enter function">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <input type="text" asp-for="MyResult.Functions[i].Great" class="form-control" id="intervalGreatText@i" placeholder="">
                                    <span class="input-group-text">&le;</span>
                                </div>
                            </div>
                            <div class="col-1 text-center my-2 p-0">
                                <a>x</a>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <span class="input-group-text">@(i == Model.FuncCount - 1 ? "\u2264" : "\u003C")</span>
                                    <input type="text" asp-for="MyResult.Functions[i].Less" class="form-control" id="intervalLessText@i" placeholder="">
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row text-decoration-none border-bottom">
                        <div class="col text-center my-3">
                            <p class="">0, otherwise</p>
                        </div>
                        <div class="col-2 mt-2 mx-3">
                            <a asp-area="" asp-page="Index" asp-route-count=@(Model.FuncCount+1) class="btn btn-outline-primary">Add</a>
                        </div>
                        <div class="col-2 mt-2">
                            <a asp-area="" asp-page="Index" asp-route-count=@(Model.FuncCount-1) class="btn btn-outline-danger">Remove</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center mt-3">
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text" id="addonSample">n</span>
                        <input type="text" asp-for="MyResult.SampleSize" class="form-control" id="sampleText" placeholder="Enter size">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text" id="addonAccuracy">e</span>
                        <input type="text" asp-for="MyResult.Accuracy" class="form-control" id="accuracyText" placeholder="Enter accuracy">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text" id="addonCount">c</span>
                        <input type="text" asp-for="MyResult.IntervalCount" class="form-control" id="countText" placeholder="Enter count">
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <button type="submit" asp-page="Result" class="btn btn-primary col-3 font-weight-bolder" style="font-size: larger">Submit</button>
            </div>
        </form>
    </div>
</div>

<script>
    function draw(){}
</script>

